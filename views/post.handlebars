<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{#each comment as |comment| }}
    <div>
      <p>{{coment.content}}</p>
      <h6>{{comment.user_id}}</h6>
     <div class="col-md-4">
